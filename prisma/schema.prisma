generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// --------------------------------------------------------
// IMAGES
// Supports avatars (1:1) and galleries (1:N)
// --------------------------------------------------------
model Images {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  fileId    String
  url       String
  altText   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  // Avatar relations (1:1)
  userAvatarId String? @unique @db.ObjectId
  shopAvatarId String? @unique @db.ObjectId

  usersAvatar Users? @relation("UserAvatar", fields: [userAvatarId], references: [id])
  shopsAvatar Shops? @relation("ShopAvatar", fields: [shopAvatarId], references: [id])

  // Gallery relations (1:N)
  userId String? @db.ObjectId
  shopId String? @db.ObjectId

  user Users? @relation("UserGallery", fields: [userId], references: [id])
  shop Shops? @relation("ShopGallery", fields: [shopId], references: [id])
}

// --------------------------------------------------------
// USERS
// Avatar (1:1), gallery (1:N), reviews
// --------------------------------------------------------
model Users {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  name      String
  password  String?
  usertype  String    @default("user")
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  // Avatar (1:1)
  avatar    Images?       @relation("UserAvatar")
  // Gallery (1:N)
  images    Images[]      @relation("UserGallery")
  following String[]
  // Reviews (1:N)
  reviews   ShopReviews[] @relation("UserReviews")
}

// --------------------------------------------------------
// SELLERS
// Owns one shop (1:1)
// --------------------------------------------------------
model Sellers {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String    @unique
  phoneNumber String
  country     String
  password    String
  stripeId    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt

  // Optional reference back to shop
  shop Shops? @relation("SellerShop")
}

// --------------------------------------------------------
// SHOPS
// Avatar (1:1), gallery (1:N), reviews (1:N), seller (1:1)
// --------------------------------------------------------
model Shops {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  bio         String?
  category    String
  coverImage  String?
  website     String?
  address     String
  opening     String?
  socialLinks Json?
  ratings     Float     @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt

  // Avatar (1:1)
  avatar Images?  @relation("ShopAvatar")
  // Gallery (1:N)
  images Images[] @relation("ShopGallery")

  // Reviews (1:N)
  reviews ShopReviews[] @relation("ShopReviews")

  // Seller (1:1) â†’ Required side (holds foreign key)
  sellerId String  @unique @db.ObjectId
  seller   Sellers @relation("SellerShop", fields: [sellerId], references: [id])
}

// --------------------------------------------------------
// SHOP REVIEWS
// --------------------------------------------------------
model ShopReviews {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  shopId    String   @db.ObjectId
  rating    Float
  reviews   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user Users @relation("UserReviews", fields: [userId], references: [id])
  shop Shops @relation("ShopReviews", fields: [shopId], references: [id])
}

model SiteConfig {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  categories    String[]
  subCategories Json
}

model DiscountCodes {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  publicName   String
  code          String @unique
  discountType  String
  discountValue Float
  sellerId      String @db.ObjectId
  usageLimit    Int?
  usedCount     Int      @default(0)
  startDate     DateTime?
  endDate       DateTime?
  isActive      Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime? @updatedAt
}



